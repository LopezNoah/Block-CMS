---
import { blockEntryForm } from "../../pages/partials/Pages/BlockEntry.astro";

interface Props {
    zone: string;
    blockType: string;
}

const props = Astro.props;
---
<div id="page-entry">
    <form>
        <div class="flex flex-col p-2">
            <label for="description">Description</label>
            <slot name="description-error"></slot>
            <input class="p-1 border border-slate-700" id="description" {...blockEntryForm.inputProps.blockType} value={props.blockType}>
            
            <label for="title">Title</label>
            <slot name="title-error"></slot>
            <input class="p-1 border border-slate-700" id="title" {...blockEntryForm.inputProps.zone} value={props.zone}>
            
            <label for="layout">Layout</label>
            <slot name="layout-error"></slot>
            <select class="p-1 border border-slate-700" id="layout" {...blockEntryForm.inputProps.layout} value={props.layout}>
                {possibleLayouts.map(layout => (
                    <option value={layout}>{layout}</option>
                    ))}
            </select>
            <button hx-post="/partials/Pages/PageEntry" hx-trigger="click" hx-target="#page-entry" hx-swap="outerHMTL" hx-push-url="true">Submit</button>
        </div>
    </form>
</div>