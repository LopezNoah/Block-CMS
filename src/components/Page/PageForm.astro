---

interface Props {
    id: number | undefined;
    title: string | null | undefined;
    description: string | null | undefined;
    layout: string | null | undefined;
};

const props = Astro.props;
const possibleLayouts = ["FullWidth"];

import { pageEntryForm } from '../../pages/partials/Pages/PageEntry.astro';

---
<div id="page-entry">
    <form>
        <div class="flex flex-col p-2">
            <label for="description">Description</label>
            <slot name="description-error"></slot>
            <input class="p-1 border border-slate-700" id="description" {...pageEntryForm.inputProps.description} value={props.description}>
            
            <label for="title">Title</label>
            <slot name="title-error"></slot>
            <input class="p-1 border border-slate-700" id="title" {...pageEntryForm.inputProps.title} value={props.title}>
            
            <label for="layout">Layout</label>
            <slot name="layout-error"></slot>
            <select class="p-1 border border-slate-700" id="layout" {...pageEntryForm.inputProps.layout} value={props.layout}>
                {possibleLayouts.map(layout => (
                    <option value={layout}>{layout}</option>
                    ))}
            </select>
            <button hx-post="/partials/Pages/PageEntry" hx-trigger="click" hx-target="#page-entry" hx-swap="outerHMTL" hx-push-url="true">Submit</button>
        </div>
    </form>
</div>